{
  "manifest_version": 3,
  "name": "DeleteTweets",
  "version": "1.0",
  "description": "Automatically delete tweets with options from a pop-up.",
  "permissions": [
    "scripting",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "*://x.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "./icon.png"
  }
}
